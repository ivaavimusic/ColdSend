{
  "name": "coldsend",
  "version": "0.1.0",
  "description": "Secure local file transfer via Wi-Fi to Bluetooth with beautiful Neumorphism UI",
  "keywords": [
    "bluetooth",
    "file-transfer",
    "local-first",
    "neumorphism",
    "secure",
    "wifi",
    "air-gapped",
    "crypto"
  ],
  "homepage": "https://github.com/yourusername/coldsend#readme",
  "bugs": {
    "url": "https://github.com/yourusername/coldsend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/coldsend.git"
  },
  "license": "MIT",
  "author": {
    "name": "ColdSend Contributors",
    "email": "support@coldsend.dev"
  },
  "main": "src/server.js",
  "bin": {
    "coldsend": "src/server.js"
  },
  "files": [
    "src/",
    "public/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "build": "echo 'No build step required'",
    "test": "echo 'Tests coming soon'",
    "lint": "echo 'Linting coming soon'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "electron": "electron electron/main.js",
    "electron-dev": "NODE_ENV=development electron electron/main.js",
    "make-icons": "icon-gen -i electron/assets/icon.svg -o electron/assets/icons --report --ico --icns --favicon",
    "dist": "npm run make-icons && electron-builder",
    "dist-mac": "npm run make-icons && electron-builder --mac",
    "dist-win": "npm run make-icons && electron-builder --win",
    "dist-linux": "npm run make-icons && electron-builder --linux"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1"
  },
  "optionalDependencies": {
    "@abandonware/noble": "^1.9.2-15"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "icon-gen": "^3.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "build": {
    "appId": "com.coldsend.app",
    "productName": "ColdSend",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/",
      "src/",
      "public/",
      "node_modules/",
      "package.json",
      ".env.example"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "electron/assets/icons/mac/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "electron/assets/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "electron/assets/icons/png/512x512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
